{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "config",
    "server/**/*.ts",
    ".eslintrc.json",
    "webpack.config.cjs",
    "webpack.config.js"
  ],
  "exclude": ["node_modules"]
}
